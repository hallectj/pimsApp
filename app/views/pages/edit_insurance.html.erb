<div class="container">
  <% if @recordLocation == "insurance" %>
  <form action="/pages/<%= @patient.id %>/update/update_insurance" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      
    <div class="form-group">
      <p><%= debug @insurance %></p>
      <label>Policy Number</label>
       <input type="text" class="form-control" name="insurance[policy_num]" value="<%= @patient.insurance.policy_num %>">
    </div>
    
    <div class="form-group">
      <label>Policy Name</label>
       <input type="text" class="form-control" name="insurance[policy_name]" value="<%= @patient.insurance.policy_name %>">
    </div>
      
    <div class="form-group">
      <label>Group Number</label>
       <input type="text" class="form-control" name="insurance[group_num]" value="<%= @patient.insurance.group_num %>">
    </div>
    
    <div class="form-group">
      <div class="button_choose_show_action">
        <p><input type="submit" class="btn btn-primary" style="margin-right: 10px;" value="Update"></p>
        <p><%= link_to "Back", page_path(@patient), html_options = {class: "btn btn-success"} %></p>
      </div>
    </div>
  </form>
  <% end %>
</div>