<div class="container">
  <% if @recordLocation == "bill" %>
  <form action="/pages/<%= @patient.id %>/discharge/<%= @patient.discharge.id %>/update/update_bill" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      
    <div class="form-group">
      <p><%= debug @bill %></p>
      <label>Amount Owed</label>
       <input type="text" class="form-control" name="bill[amount_owed]" value="<%= @patient.discharge.bill.amount_owed %>">
    </div>
    
    <div class="form-group">
      <label>Amount Paid</label>
       <input type="text" class="form-control" name="bill[amount_paid]" value="<%= @patient.discharge.bill.amount_paid %>">
    </div>
      
    <div class="form-group">
      <label>Amount Paid by Insurance</label>
       <input type="text" class="form-control" name="bill[amount_insurance]" value="<%= @patient.discharge.bill.amount_insurance %>">
    </div>
    
    <div class="form-group">
      <div class="button_choose_show_action">
        <p><input type="submit" class="btn btn-primary" style="margin-right: 10px;" value="Update"></p>
        <p><%= link_to "Back", page_path(@patient), html_options = {class: "btn btn-success"} %></p>
      </div>
    </div>
  </form>
  <% end %>
</div>