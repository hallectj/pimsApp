<h2>New Discharge Information</h2>

<div class = "container">
  <%= simple_form_for @patient.build_discharge, url: new_discharge_path do |f| %>
    <%= f.input :date, as: :string, required: true, input_html: {class: "datepicker"} %>
    <%= f.input :time, as: :string, required: true, input_html: {class: "timepicker"}%>
    <%= f.submit :submit %>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({format: 'yyyy-mm-dd'});
  });
</script>

