<div class="container">
  <% if @recordLocation == "contact" %>
  <form action="/pages/<%= @patient.id %>/update/update_contact" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      
    <div class="form-group">
      <p><%= debug @contact %></p>
      <label>Home Phone</label>
       <input type="text" class="form-control" name="contact[home_phone]" value="<%= @patient.contact.home_phone %>">
    </div>
    
    <div class="form-group">
      <label>Work Phone</label>
       <input type="text" class="form-control" name="contact[work_phone]" value="<%= @patient.contact.work_phone %>">
    </div>
      
    <div class="form-group">
      <label>Mobile Phone</label>
       <input type="text" class="form-control" name="contact[mobile_phone]" value="<%= @patient.contact.mobile_phone %>">
    </div>
      
    <div class="form-group">
      <label>Street Address</label>
       <input type="text" class="form-control" name="contact[street]" value="<%= @patient.contact.street %>">
    </div>
      
    <div class="form-group">
      <label>City</label>
       <input type="text" class="form-control" name="contact[city]" value="<%= @patient.contact.city %>">
    </div>
      
    <div class="form-group">
      <label>State</label>
       <input type="text" class="form-control" name="contact[state]" value="<%= @patient.contact.state %>">
    </div>
      
    <div class="form-group">
      <label>Zip Code</label>
       <input type="text" class="form-control" name="contact[zip]" value="<%= @patient.contact.zip %>">
    </div>
    
    <div class="form-group">
      <div class="button_choose_show_action">
        <p><input type="submit" class="btn btn-primary" style="margin-right: 10px;" value="Update"></p>
        <p><%= link_to "Back", page_path(@patient), html_options = {class: "btn btn-success"} %></p>
      </div>
    </div>
  </form>
  <% end %>
</div>