<div class="container">
  <% if @recordLocation == "emergency_contact" %>
  <form action="/pages/<%= @patient.id %>/update/update_emergency_contact" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      
    <div class="form-group">
      <p><%= debug @emergency_contact %></p>
      <label>Emergency Contact 1 Name</label>
       <input type="text" class="form-control" name="emergency_contact[e1_name]" value="<%= @patient.emergency_contact.e1_name %>">
    </div>
    
    <div class="form-group">
        <label>Emergency Contact 1 Phone</label>
        <input type="text" class="form-control" name="emergency_contact[e1_phone]" value="<%= @patient.emergency_contact.e1_phone %>">
    </div>
      
    <div class="form-group">
        <label>Emergency Contact 2 Name</label>
        <input type="text" class="form-control" name="emergency_contact[e2_name]" value="<%= @patient.emergency_contact.e2_name %>">
    </div>
      
    <div class="form-group">
        <label>Emergency Contact 2 Phone</label>
        <input type="text" class="form-control" name="emergency_contact[e2_phone]" value="<%= @patient.emergency_contact.e2_phone %>">
    </div>
    
    <div class="form-group">
      <div class="button_choose_show_action">
        <p><input type="submit" class="btn btn-primary" style="margin-right: 10px;" value="Update"></p>
        <p><%= link_to "Back", page_path(@patient), html_options = {class: "btn btn-success"} %></p>
      </div>
    </div>
  </form>
  <% end %>
</div>