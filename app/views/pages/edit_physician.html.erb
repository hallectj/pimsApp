<div class="container">
  <% if @recordLocation == "physician" %>
  <form action="/pages/<%= @patient.id %>/update/update_physician" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      
    <div class="form-group">
      <p><%= debug @physician %></p>
      <label>Physician Name</label>
       <input type="text" class="form-control" name="physician[family_physician]" value="<%= @patient.physician.family_physician %>">
    </div>
    
    <div class="form-group">
      <label>Physician Phone</label>
       <input type="text" class="form-control" name="physician[physician_phone]" value="<%= @patient.physician.physician_phone %>">
    </div>
    
    <div class="form-group">
      <div class="button_choose_show_action">
        <p><input type="submit" class="btn btn-primary" style="margin-right: 10px;" value="Update"></p>
        <p><%= link_to "Back", page_path(@patient), html_options = {class: "btn btn-success"} %></p>
      </div>
    </div>
  </form>
  <% end %>
</div>